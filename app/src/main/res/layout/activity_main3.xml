<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"    tools:context="com.sabirmakhlouf.riwayat.riwayat.Main3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="ملخص عن الرواية :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textVigfdsdsewf"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="@string/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_dark"
                android:textAlignment="center"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/textVigfdsdsewf"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Developed By : Sabir Makhlouf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewf"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
