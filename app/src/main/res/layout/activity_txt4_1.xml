<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_txt4_1"
    android:layout_width="match_parent"     xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    tools:context="com.sabirmakhlouf.riwayat.riwayat.txt4_1"
    android:background="?attr/colorButtonNormal">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:id="@+id/seekBar" />

    <com.google.android.gms.ads.NativeExpressAdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-1237823773164410/7237424484"
        ads:adSize="FULL_WIDTHx80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">
    </com.google.android.gms.ads.NativeExpressAdView>

    <ScrollView
        android:layout_width="wrap_content"
        android:id="@+id/scrool"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:text="@string/txt4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
